<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_screen_button_text_color</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">@dimen/buttons_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/main_screen_button_text_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>


    </style>

    <style name="SettingsScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/settings_text_margin_vertical</item>
        <item name="android:textColor">@color/settings_screen_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconTint">@color/icon_tint</item>
        <item name="fontFamily">@font/ys_display_regular</item>


    </style>

    <style name="PlayTrackPropetriesLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constraintStart_toStartOf">@id/start_secondary_guideLine</item>

    </style>

    <style name="PlayTrackPropetriesData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/search_icon_tint_reverse</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constraintStart_toEndOf">@id/properties_guideLine</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constraintEnd_toEndOf">@id/end_secondary_guideLine</item>

    </style>

</resources>